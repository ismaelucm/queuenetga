Behavior={
    Name="FollowingPath",
    Type="FSM",
    Blackboard={
        Inputs={
            Path="",
            IsCircularPath=false,
            Target=""
        }
    },
    States={
        State0={
            Action="NextPathPoint",
            Initial=true,
            Parameters={
                Inputs={
                    Path="Blackboard.Path",
                    Circular="Blackboard.IsCircularPath"
                },
                Outputs={
                    FinalPosition="Blackboard.Target"
                }
            }
        },
        State1={
            Action="MoveTo",
            Parameters={
                Inputs={
                    Target="Blackboard.Target",
                    Animation="walk1"
                }
            }

        }
    },
    Transitions={
        {
            From="State0",
            When="ActionFinish",
            To={
                {
                    State="State1",
                    Prob=1
                }
            }
        },
        {
            From="State1",
            When="ActionFinish",
            To="State0"
        }
    }
}